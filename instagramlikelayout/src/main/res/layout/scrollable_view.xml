<?xml version="1.0" encoding="utf-8"?>
<com.anwesome.ui.instagramlikelayout.ScrollFirstLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#E0E0E0"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        android:id="@+id/fixed_view">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_image"
            android:layout_weight="0.1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_weight="0.8"
            android:id="@+id/view_title"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:id="@+id/moving_view">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/img_view"
            android:layout_weight="0.95"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:text="Status "
            android:id="@+id/status_view"/>
    </LinearLayout>
</com.anwesome.ui.instagramlikelayout.ScrollFirstLayout>